{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "newLine": "LF",
      "pretty": true,
      "target": "es6",
      "sourceMap": true,
      "outDir": "./dist",
      "lib": [
        "esnext",
        "es2017",
        "dom",
        "esnext.asynciterable",
        "esnext.array"
      ],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  